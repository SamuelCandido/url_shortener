    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>


    <title>URL shortener</title>
</head>
<body class="bg-secondary">

    <!-- Barra de navegação -->  
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid text-black">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link">Contatos:</a>
                </li>
              <li class="nav-item text-decoration-underline">
                <a class="nav-link" href=mailto:samueljosecandido9@gmail.com?subject="link HTML">E-mail</a>
              </li>
              <li class="nav-item text-decoration-underline">
                <a class="nav-link" href=" https://wa.me/5547991071358">Whatsapp</a>
              </li>
              <li class="nav-item text-decoration-underline">
                <a class="nav-link" href="https://www.linkedin.com/in/samuel-jos%C3%A9-candido-410700231/">Linkedin</a>
              </li>
              <li class="nav-item text-decoration-underline">
                <a class="nav-link" href="https://github.com/SamuelCandido/url_shortener">Github</a>
              </li>
              <li class="nav-item text-decoration-underline">
                <a class="nav-link" aria-current="page" href="/">Rota padrão</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>
    <!-- //Barra de navegação -->

    <br>

    <!-- Tabela dos últimos links gerados -->
    <div class="text-light bg-secondary container">
        <h1 class="text-decoration-underline text-center"> Bem vindo ao encurtador de URLs</h1>
        <br>
        <br>
        <h5 class="text-center">Últimos encurtamentos</h5>

        <form action="/shortUrls" method="POST">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>URL inteira</th>
                        <th>URL encurtada</th>
                    </tr>
                    <tbody>
                        <!--Para percorrer uma a uma-->
                        <% shortUrls.forEach(shortUrl => { %>
                            <tr>
                              <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                            </tr>
                            <% }) %>
                    </tbody>
                </thead>
            </table>
    <!-- //Tabela dos últimos links gerados -->

    <!-- Input das URLs -->
            <div class="input-group mb-3">
                <label for="fullUrl"  aria-placeholder ="Copie e cole seu URL aqui"></label>
                <input id="campo_url" class="form-control" name="fullUrl" type="url" placeholder="Copie e cole seu URL aqui" aria-describedby="button-addon2">
                
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Encurtar</button>
                </div>
            </div>
    <!-- //Input das URLs -->

        </form>
    </div>
</body> 
</html>
